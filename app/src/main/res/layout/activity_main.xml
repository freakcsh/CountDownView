<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.freak.countdown.CountDownView
        android:id="@+id/count_down_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CountDownViewTimeHeight="50dp"
        app:CountDownViewTimeWidth="50dp"
        app:CountDownViewTimeTextColor="@color/colorPrimary"
        app:CountDownViewSeparateType="symbol"
        app:CountDownViewSeparateTextStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.freak.countdown.CountDownView
        android:id="@+id/count_down_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CountDownViewTimeHeight="50dp"
        app:CountDownViewTimeWidth="50dp"
        app:CountDownViewTimeTextColor="@color/colorPrimary"
        app:CountDownViewSeparateType="chinese"
        app:CountDownViewSeparateTextStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_down_view" />
</androidx.constraintlayout.widget.ConstraintLayout>