<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.freak.countdown.CountDownView
        android:id="@+id/count_down_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CountDownViewTimeHeight="20dp"
        app:CountDownViewTimeWidth="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:CountDownViewSecondBackground="@drawable/bg_shape"
        app:CountDownViewMinuteBackground="@drawable/bg_shape"
        app:CountDownViewHourBackground="@drawable/bg_shape"
        app:CountDownViewTimeTextColor="@color/withe"
        app:CountDownViewSeparateType="symbol"
        app:CountDownViewSeparateTextStyle="bold"
        app:CountDownViewSeparateMargin="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.freak.countdown.CountDownView
        android:id="@+id/count_down_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CountDownViewTimeHeight="20dp"
        app:CountDownViewTimeWidth="20dp"
        app:CountDownViewTimeTextColor="@color/colorPrimary"
        app:CountDownViewSeparateType="chinese"
        app:CountDownViewSeparateTextStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_down_view" />
    <com.freak.countdown.CountDownView
        android:id="@+id/count_down_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:CountDownViewTimeHeight="20dp"
        app:CountDownViewTimeWidth="20dp"
        app:CountDownViewTimeTextColor="@color/colorPrimary"
        app:CountDownViewSeparateType="chinese"
        app:CountDownViewIsCloseDay="true"
        app:CountDownViewSeparateTextColor="@color/colorAccent"
        app:CountDownViewSeparateTextStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_down_view" />
</LinearLayout>